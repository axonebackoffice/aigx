<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_config_settings_inv_global_form" model="ir.ui.view">
        <field name="name">res.config.settings.inv.global.form</field>
        <field name="model">res.config.settings</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//block[@id='invoicing_settings']" position="after">
                <block title="Importacion de CFDI" id="invoicing_settings">

                    <setting id="default_create_products" string="Crear productos" help="Si este esta marcado creara los productos no encontrados">
                        <field name="cfdi_import_create_products"/>
                    </setting>
                    <setting id="default_import_type" help="Tipo de producto" invisible="not cfdi_import_create_products">
                        <field name="cfdi_import_detailed_type"/>
                    </setting>
                    <setting id="default_import_categ_id" help="Categoria de producto" invisible="not cfdi_import_create_products">
                        <field name="cfdi_import_categ_id"/>
                    </setting>

                </block>


            </xpath>

        </field>
    </record>


</odoo>